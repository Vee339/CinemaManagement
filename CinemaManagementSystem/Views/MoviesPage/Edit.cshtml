@model Movie

<h1>Edit the movie @Model.Title</h1>

<form method="POST" action="/MoviesPage/Update/@Model.MovieId">
    <div class="inputBox" style="display:none;">
        <input type="number" name="MovieId" value="@Model.MovieId"/>
    </div>
    <div class="inputBox">
        <label for="title">Title:</label>
        <input type="text" id="title" name="Title" value="@Model.Title"/>
    </div>
    <div class="inputBox">
        <label for="genre">Genre:</label>
        <input type="text" id="genre" name="Genre" value="@Model.Genre"/>
    </div>
    <div class="inputBox">
        <label for="language">Language:</label>
        <input type="text" id="language" name="Language" value="@Model.Language"/>
    </div>
    <div class="inputBox">
        <label for="releaseDate">Release Date:</label>
        <input type="date" id="releaseDate" name="ReleaseDate" value="@Model.ReleaseDate"/>
    </div>
    <input type="Submit" value="Submit" />
</form>